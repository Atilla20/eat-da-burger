<div class = "row">
    {{!Burgers to devour}}
    <div class="col s6 center-align">
        <ul>
            {{#each burger}}
            {{#unless this.devoured}}
            <div class="card light-green">
                <p>
                    {{this.id}}. {{this.burger_name}}


            <form action="update/ {{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="1">
            <button type="submit" class="waves-effect waves-light btn green z-depth-4"> DEVOUR THE BURGER!</button>
            </form>
                </p>
            </div>

            {{/unless}}
            {{/each}}
        </ul>
    </div>
        {{ Devoured Burgers}}
        <div class="col s6 center-align">
            <ul>
                {{#each burger}}
                    {{#if this.devoured}}
                    <div class="card light-green lighten-2">
                        <p class="grey-text">
                            {{this.id}}. {{this.burger_name}}
            
            <form action="delete/{{this.id}}?_method=DELETE" method="POST">
            <button type="submit" class="waves-effect waves-light btn green z-depth-4"> Remove</button>
            </form>
                        </p>
                    </div>
            {{/if}}
            {{/each}}
            </ul>
        </div>
</div>